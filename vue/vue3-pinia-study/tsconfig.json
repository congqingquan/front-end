{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "strictFunctionTypes": true,
        "noLib": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vite/client",
            "@dcloudio/types",
            "unplugin-icons/types/vue"
        ]
    },
    "include": [
        "mock/**/*.ts",
        "src/**/*.ts",
        "src/**/*.vue",
        "vite.config.ts"
    ],
    "files": [
        "./src/types/vue-global-properties.d.ts",
        "./src/types/auto-imports.d.ts",
        "./src/types/auto-import-vue-components.d.ts",
        "./src/types/postcss.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.js"
    ]
}
